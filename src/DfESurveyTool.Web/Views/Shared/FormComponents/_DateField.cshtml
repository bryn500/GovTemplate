@model DateViewModel

<div class="govuk-form-group govuk-form-group--error">
    <fieldset class="govuk-fieldset" role="group" aria-describedby="passport-issued-hint passport-issued-error">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
                When was your passport issued?
            </h1>
        </legend>
        <div id="passport-issued-hint" class="govuk-hint">
            For example, 22 03 2019
        </div>
        <span id="passport-issued-error" class="govuk-error-message">
            <span class="govuk-visually-hidden">Error:</span> The date your passport was issued must be in the past
        </span>
        <div class="govuk-date-input" id="passport-issued">
            <div class="govuk-date-input__item">
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-date-input__label" asp-for="@Model.Day">
                        Day
                    </label>
                    <input class="govuk-input govuk-date-input__input govuk-input--width-2 govuk-input--error" asp-for="@Model.Day" type="text" pattern="[0-9]*" inputmode="numeric">
                </div>
            </div>
            <div class="govuk-date-input__item">
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-date-input__label" asp-for="@Model.Month">
                        Month
                    </label>
                    <input class="govuk-input govuk-date-input__input govuk-input--width-2 govuk-input--error" asp-for="@Model.Month" type="text" pattern="[0-9]*" inputmode="numeric">
                </div>
            </div>
            <div class="govuk-date-input__item">
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-date-input__label" asp-for="@Model.Year">
                        Year
                    </label>
                    <input class="govuk-input govuk-date-input__input govuk-input--width-4 govuk-input--error" asp-for="@Model.Year" type="text" pattern="[0-9]*" inputmode="numeric">
                </div>
            </div>
        </div>
    </fieldset>
</div>
