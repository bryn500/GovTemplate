@using DfESurveyTool.Web.Models.Example
@using DfESurveyTool.Web.Models.Help
@using DfESurveyTool.Web.Config
@using DfESurveyTool.Web.Consts
@using StackExchange.Profiling
@using System.Linq
@using System.Collections.Generic

@inject Microsoft.Extensions.Options.IOptions<KeysConfig> KeysConfig
@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Joonasw.AspNetCore.SecurityHeaders
@addTagHelper *, MiniProfiler.AspNetCore.Mvc

@functions {
    string GetErrorContainerClass(string fieldName)
    {
        var hasError = ViewData?.ModelState["Radio"]?.Errors?.Any();

        if (hasError.HasValue && hasError == true)
            return "govuk-form-group--error";
        else
            return "";
    }
}